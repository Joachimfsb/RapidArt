<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top List</title>
    <link href="/res/css/toplist.css" type="text/css" rel="stylesheet"/>
</head>
<body>
    {{ template "header" . }}

    <main>
        <!-- Top 10 Liked Posts section -->
        <section class="top-posts">
            <h2>Top 10 Liked Posts</h2>
            <div class="posts-box">
                {{ range .TopPosts }}
                <div class="post-item">
                    <a href="/post/?postid={{ .PostId }}">
                        <img src="/api/img/post/?post_id={{ .PostId }}" alt="Post {{ .PostId }}">
                    </a>
                    <p class="like-count">Likes: {{ .LikeCount }}</p>
                </div>
                {{ else }}
                <p>No top posts available.</p>
                {{ end }}
            </div>
        </section>

        <!-- Top 10 Followed Users section -->
        <section class="top-users">
            <h2>Top 10 Followed Users</h2>
            <div class="users-box">
                {{ range .TopUsers }}
                <div class="user-item">
                    <a href="/profile/?userid={{ .UserId }}">
                        <img src="/api/img/user/profile-pic/?userid={{ .UserId }}" alt="User {{ .UserId }}">
                    </a>
                    <p class="user-displayname">{{ .Displayname }}</p>
                    <p class="follower-count">Followers: {{ .FollowerCount }}</p>
                </div>
                {{ else }}
                <p>No top users available.</p>
                {{ end }}
            </div>
        </section>

        <!-- Daily basis canvas -->
        <section class="daily-lines">
            <h2>Most Liked Posts For Todays Canvases</h2>
            <div class="lines-box">
                {{ range .BasisCanvases }}
                    <a href="/post/?basiscanvasid={{ .BasisCanvasId }}" class="line-item">
                        <img src="/api/img/basiscanvas/?id={{ .BasisCanvasId }}" alt="Line {{ .BasisCanvasId }}">
                    </a>
                {{ else }}
                    <p>No basis canvases available.</p>
                {{ end }}
            </div>
        </section>
    </main>

    <script src="/res/js/toplist.js"></script>
</body>
</html>
