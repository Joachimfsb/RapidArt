<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .Title }}</title>
    <link href="/res/css/frontpage.css" type="text/css" rel="stylesheet"/>
</head>
<body>
   <header>
        <!-- Navbar (logo, home, top list, profile, and search buttons as images) -->
        <nav class="navbar">
            <div class="navbar-container">
                <div class="logo">
                     <img src="/res/img/logo.png" alt="RapidArt Logo">
                 </div>
                 <div class="nav-icons">
                     <a href="/" class="nav-item">
                         <img src="/res/img/home1.png" alt="Home Icon">
                         <span class="nav-text">Home</span>
                     </a>
                     <a href="/toplist/" class="nav-item">
                         <img src="/res/img/crown-icon.png" alt="Top List Icon">
                         <span class="nav-text">Top List</span>
                     </a>
                     <a href="/profile/" class="nav-item">
                         <img src="/res/img/profile.png" alt="Profile Icon">
                         <span class="nav-text">Profile</span>
                     </a>
                     <a href="/search/" class="nav-item">
                         <img src="/res/img/search.png" alt="Search Icon">
                         <span class="nav-text">Search</span>
                     </a>
                 </div>
            </div>
        </nav>
   </header>

   <main>
        <!-- Daglige basis lærret -->
        <section class="daily-lines">
            <h2>Choose a Basis Canvas</h2>
            <div class="lines-box">
                {{ range .BasisCanvases }}
                    <a href="/drawing/?line={{ .BasisCanvasId }}" class="line-item">
                        <img src="/api/img/basiscanvas/?id={{ .BasisCanvasId }}" alt="Line {{ .BasisCanvasId }}">
                    </a>
                {{ else }}
                    <p>No basis canvas available.</p>
                {{ end }}
            </div>
        </section>

        <!-- FEED (static forløpig) -->
        <section class="feed">
            <h2>Recent Drawings</h2>
            <div class="feed-container">
                <div class="feed-item">
                    <a href="/post/?drawing=1">
                        <img src="/res/img/drawing1.png" alt="Drawing 1">
                    </a>
                    <div class="feed-icons">
                        <img src="/res/img/like.png" alt="Like">
                        <img src="/res/img/comment.png" alt="Comment">
                        <img src="/res/img/report.png" alt="Report">
                    </div>
                </div>
                <div class="feed-item">
                    <a href="/post/?drawing=2">
                        <img src="/res/img/drawing2.png" alt="Drawing 2">
                    </a>
                    <div class="feed-icons">
                        <img src="/res/img/like.png" alt="Like">
                        <img src="/res/img/comment.png" alt="Comment">
                        <img src="/res/img/report.png" alt="Report">
                    </div>
                </div>
                <div class="feed-item">
                    <a href="/post/?drawing=3">
                        <img src="/res/img/drawing3.png" alt="Drawing 3">
                    </a>
                    <div class="feed-icons">
                        <img src="/res/img/like.png" alt="Like">
                        <img src="/res/img/comment.png" alt="Comment">
                        <img src="/res/img/report.png" alt="Report">
                    </div>
                </div>
            </div>
        </section>
    </main>

</body>
<script src="/res/js/frontpage.js"></script>
</html>
