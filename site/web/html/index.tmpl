<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .Title }}</title>
    <link href="/res/css/frontpage.css" type="text/css" rel="stylesheet"/>
</head>
<body>
   {{ template "header" . }}

   <main>
        <!-- Daglige basis lærret -->
        <section class="daily-lines">
            <h2>Choose a Basis Canvas</h2>
            <div class="lines-box">
                {{ range .BasisCanvases }}
                    <a href="/drawing/?line={{ .BasisCanvasId }}" class="line-item">
                        <img src="/api/img/basiscanvas/?id={{ .BasisCanvasId }}" alt="Line {{ .BasisCanvasId }}">
                    </a>
                {{ else }}
                    <p>No basis canvas available.</p>
                {{ end }}
            </div>
        </section>

        <!-- FEED (static forløpig) -->
        <section class="feed">
            <h2>Recent Drawings</h2>
            <div class="feed-container">
                <div class="feed-item">
                    <a href="/post/?drawing=1">
                        <img src="/res/img/drawing1.png" alt="Drawing 1">
                    </a>
                    <div class="feed-icons">
                        <img src="/res/img/like.png" alt="Like">
                        <img src="/res/img/comment.png" alt="Comment">
                        <img src="/res/img/report.png" alt="Report">
                    </div>
                </div>
                <div class="feed-item">
                    <a href="/post/?drawing=2">
                        <img src="/res/img/drawing2.png" alt="Drawing 2">
                    </a>
                    <div class="feed-icons">
                        <img src="/res/img/like.png" alt="Like">
                        <img src="/res/img/comment.png" alt="Comment">
                        <img src="/res/img/report.png" alt="Report">
                    </div>
                </div>
                <div class="feed-item">
                    <a href="/post/?drawing=3">
                        <img src="/res/img/drawing3.png" alt="Drawing 3">
                    </a>
                    <div class="feed-icons">
                        <img src="/res/img/like.png" alt="Like">
                        <img src="/res/img/comment.png" alt="Comment">
                        <img src="/res/img/report.png" alt="Report">
                    </div>
                </div>
            </div>
        </section>
    </main>

</body>
<script src="/res/js/frontpage.js"></script>
</html>
