{{$i := 0}}
{{range .TopList}}
    {{$i = add $i 1}}

    {{$place := ""}}
    {{if eq $i 1}}
        {{$place = "first-place"}}
    {{else if eq $i 2}}
        {{$place = "second-place"}}
    {{else if eq $i 3}}
        {{$place = "third-place"}}
    {{end}}

    <div class="post">
        <div class="spot-indicator noselect {{$place}}">{{$i}}</div>
        <a href="/profile/{{.Username}}">
            <img src="/api/img/user/profile-pic/?userid={{.UserId}}">
        </a>
    </div>
{{end}}