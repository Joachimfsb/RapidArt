<!-- header.tmpl -->
{{ define "header" }}
<header>
    <!-- Navbar (logo, home, top list, profile, and search buttons as images) -->
    <nav>
        <div class="navbar-container">
            <a href="/" title="Go to front page" id="logo">
                <img class="logo" src="/res/img/a_logo.png" alt="RapidArt Logo">
            </a>
            <div class="nav-icons">
                <a href="/" class="nav-item">
                    <img src="/res/icon/house-fill.svg" alt="Home Icon">
                    <span class="nav-text">Home</span>
                </a>
                <a href="/search/" class="nav-item">
                    <img src="/res/icon/search.svg" alt="Search Icon">
                    <span class="nav-text">Search</span>
                </a>
                <a href="/toplist/" class="nav-item">
                    <img src="/res/icon/award-fill.svg" alt="Top List Icon">
                    <span class="nav-text">Top List</span>
                </a>
                <a href="/profile/" class="nav-item">
                    <img src="/res/icon/person-circle.svg" alt="Profile Icon">
                    <span class="nav-text">Profile</span>
                </a>
            </div>
        </div>
    </nav>
</header>
{{ end }}
